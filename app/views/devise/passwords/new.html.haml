.head
  %header.header_FURIMA
    %h1.header__logo
      =link_to root_path do
        =image_tag asset_path"logo.png", class: "furima_logo"

.main
  ._form
    %h2 パスワードをお忘れですか？
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      = render "devise/shared/error_messages", resource: resource
      .field
        = f.label :メールアドレス
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email",class:'form-group__input'
      .actions
        = f.submit "送信",class:'user__main__form__contents__submit__btn'

