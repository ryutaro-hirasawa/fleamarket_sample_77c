.head
  %header.header_FURIMA
    %h1.header__logo
      =link_to root_path do
        =image_tag "logo.png", class: "furima_logo"

.main
  ._form
    %h2 住所情報登録
    = form_for @sending_destinations do |f|
      = render "devise/shared/error_messages", resource: @sending_destinations
      .field
        = f.label :郵便番号
        %span.form-group__require ＊必須
        %br/
        = f.text_field :post_code, placeholder: "例) 1234567",class:'form-group__input'

      .field
        = f.label :都道府県
        %span.form-group__require ＊必須
        %br/
        = f.collection_select :prefecture_code_id, PrefectureCode.all, :id, :name
      
      .field
        = f.label :市区町村
        %span.form-group__require ＊必須
        %br/
        = f.text_field :city,placeholder: "例) 大阪市北区〇〇",class:'form-group__input'
      
      .field
        = f.label :番地
        %span.form-group__require ＊必須
        %br/
        = f.text_field :house_number,placeholder: "例) 1-1-1",class:'form-group__input'
      
      .field
        = f.label :ビル・マンション名と部屋番号
        %br/
        = f.text_field :building_name,placeholder: "例) 〇〇マンション203",class:'form-group__input'
      
      .field
        = f.label :電話番号
        %span.form-group__require ＊必須
        %br/
        = f.text_field :phone_number,placeholder: "例) 09077773333",class:'form-group__input'
      
      .actions
        = f.submit "登録",class:'user__main__form__contents__submit__btn'

.footer
  %ul.contents
    %li.content
      %h2.content__head FURIMAについて
      %ul
        %li
          =link_to  "会社概要（運営会社）"
        %li
          =link_to  "プライバシーポリシー"
        %li
          =link_to  "FURIMA利用規約"
        %li
          =link_to  "ポイントに関する特約"
    %li.content
      %h2.content__head FURIMAを見る
      %ul
        %li
          =link_to  "カテゴリー一覧"
        %li
          =link_to  "ブランド一覧"
    %li.content
      %h2.content__head ヘルプ＆ガイド
      %ul
        %li
          =link_to  "FURIMAガイド"
        %li
          =link_to  "FURIMAロゴ利用ガイドライン"
        %li
          =link_to  "お知らせ"
  .footer__logo
    =link_to root_path do
      =image_tag "logo-white.png", width:"160",height:"46.34"
  %p © FURIMA